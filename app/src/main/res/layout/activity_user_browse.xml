<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="user" type="com.example.tanyayuferova.randomusers.entity.User"/>
    </data>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_browse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanyayuferova.randomusers.UserBrowse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- Photo -->
        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <!-- Full name -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/User.fullName"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fullName"
                    android:text="@{user.fullName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/user_browse_text_size" />
            </TableRow>

            <!-- Email -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/User.email"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:text="@{user.email}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textColor="@color/colorAccent"
                    android:clickable="true"
                    android:onClick="emailOnClick"/>
            </TableRow>

            <!-- Telephone -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/User.phone"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/phone"
                        android:text="@{user.phone}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_browse_text_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/open_dialer"
                        android:onClick="openDialer"
                        android:contentDescription="@string/openDialerDescription"
                        android:layout_gravity="start"/>
                </LinearLayout>
            </TableRow>

            <!-- Nationality -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/User.nationality"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nationality"
                    android:text="@{user.nationality}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/user_browse_text_size" />
            </TableRow>

            <!-- Location -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/User.location"
                    android:textSize="@dimen/user_browse_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location"
                    android:text="@{user.location.fullDescription}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/user_browse_text_size"
                    />
            </TableRow>
        </TableLayout>

        <!-- Back button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backBtn"
            android:text="@string/backBtnCaprion"
            android:onClick="backBtnOnClick"/>
    </LinearLayout>
</RelativeLayout>
</layout>